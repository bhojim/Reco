@model Reco.Models.Document

@{
    ViewData["Title"] = "Details";
}

<h2>Details</h2>

<div>
    <h4>Document</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.ReceivedDate)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.ReceivedDate)
        </dd>
    </dl>
</div>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>
                Page number
            </th>
            <th>
                Content
            </th>

            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Page)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.PageNumber)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Content)
                </td>
                <td>
                    <a asp-controller="Pages" asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-controller="Pages" asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-controller="Pages" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<div>
    <a asp-action="Edit" asp-route-id="@Model.Guid">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
